{
    "name": "szemul/slim-sentry-bridge",
    "description": "Middleware to bridge sentry to slim via the `szemul/error-handler` package",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.8",
        "sentry/sentry": "^3.3.2",
        "szemul/config": "^v1.0.0",
        "szemul/error-handler": "^v1.0.0|^2.0.0",
        "szemul/debugger-sentry-bridge": "^v1.0.0",
        "szemul/logging-error-handling-context": "^v1.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.4.0",
        "phpunit/phpunit": "^9.5.5",
        "sentry/sdk": "^3.1.0"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\SlimSentryBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\SlimSentryBridge\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
